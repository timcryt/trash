$set (a b c) (foo bar baz)

$set stdout [$stdout [@if {hello eq world} {@a} else {@if {baz eq baz} {@b} else {@c}}]]

$set vls "Very long string, which will be used after if"

$set (vls stdout) [
    @if <{$vls _eq "Short string"} vls> <{
        ($1 [$stdout "It's a short string"])
    } stdout> else <{
        ($1 [$stdout "It's a long string"])
    } stdout>
]

$set stdout [$stdout $vls] 